{
  "name": "perfornium",
  "version": "1.0.0",
  "description": "Flexible performance testing framework for REST, SOAP, and web applications",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "perfornium": "dist/cli/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/reporting/templates && cp -r src/reporting/templates/* dist/reporting/templates/ 2>/dev/null || true",
    "test": "jest",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "dev:link": "npm run build && npm link",
    "dev:test": "npm run build && node dist/cli/cli.js"
  },
  "keywords": [
    "performance",
    "testing",
    "load-testing",
    "rest",
    "soap",
    "web",
    "playwright"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/papaparse": "^5.3.16",
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "csv-parse": "^5.5.0",
    "csv-writer": "^1.6.0",
    "handlebars": "^4.7.0",
    "influx": "^5.10.0",
    "inquirer": "^12.9.4",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "papaparse": "^5.5.3",
    "playwright": "^1.40.0",
    "soap": "^1.0.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "@types/xmldom": "^0.1.34",
    "jest": "^29.7.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
