{
  "name": "@testsmith/perfornium",
  "version": "0.6.1",
  "description": "Flexible performance testing framework for REST, SOAP, and web applications",
  "author": "TestSmith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/testsmith-io/perfornium.git"
  },
  "homepage": "https://github.com/testsmith-io/perfornium#readme",
  "bugs": {
    "url": "https://github.com/testsmith-io/perfornium/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "perfornium": "dist/cli/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dsl": {
      "types": "./dist/dsl/index.d.ts",
      "default": "./dist/dsl/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/reporting/templates && cp -r src/reporting/templates/* dist/reporting/templates/ 2>/dev/null || true",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "benchmark": "npm run build && node --expose-gc dist/benchmarks/performance-tests.js",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "dev:link": "npm run build && npm link",
    "dev:test": "npm run build && node dist/cli/cli.js",
    "report:web-vitals": "node generate-web-vitals-report.js",
    "docker:build:controller": "docker build -t perfornium/controller -f docker/Dockerfile.controller .",
    "docker:build:worker": "docker build -t perfornium/worker -f docker/Dockerfile.worker .",
    "docker:build:worker-slim": "docker build -t perfornium/worker-slim -f docker/Dockerfile.worker-slim .",
    "docker:build:all": "npm run docker:build:controller && npm run docker:build:worker && npm run docker:build:worker-slim",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d worker-1 worker-2 worker-3",
    "docker:up:slim": "docker compose -f docker/docker-compose.slim.yml up -d worker-1 worker-2 worker-3",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f"
  },
  "keywords": [
    "performance",
    "testing",
    "load-testing",
    "rest",
    "soap",
    "web",
    "playwright"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/papaparse": "^5.3.16",
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "csv-parse": "^5.5.0",
    "csv-writer": "^1.6.0",
    "esbuild": "^0.27.1",
    "handlebars": "^4.7.0",
    "influx": "^5.10.0",
    "inquirer": "^12.9.4",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "papaparse": "^5.5.3",
    "playwright": "^1.40.0",
    "soap": "^1.0.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/handlebars": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.39.2",
    "typescript": "^5.2.0",
    "typescript-eslint": "^8.49.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
